<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bl_background" >

    <ImageView
        android:id="@+id/ringImageView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/fujoshi_ring"
        app:layout_constraintBottom_toTopOf="@id/ringingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/description_of_the_face_of_fujishi"/>

    <Button
        android:id="@+id/ringingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:fontFamily="@font/coiny"
        android:text="@string/ringing_button_text"
        android:textSize="24sp"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ringImageView"
        app:layout_constraintStart_toStartOf="@id/ringImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>